<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/customiddownload"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="3dp"
            android:layout_marginRight="5dp"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="1.0" />

        <TextView
            android:id="@+id/customtitledownload"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginRight="8dp" />

        <TextView
            android:id="@+id/customtimedownload"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/customtitledownload"
            app:layout_constraintRight_toRightOf="@id/customtitledownload"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/customtitledownload"
            app:layout_constraintHorizontal_bias="0.555"
            android:layout_marginRight="8dp" />

        <TextView
            android:id="@+id/custompathdownload"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="@id/customtimedownload"
            app:layout_constraintRight_toRightOf="@id/customtimedownload"
            app:layout_constraintTop_toBottomOf="@+id/customtimedownload"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.312"
            android:layout_marginRight="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>