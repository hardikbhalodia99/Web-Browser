<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:paddingBottom="1dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/bookmarklistid"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/bookmarklisttitle"
        app:layout_constraintRight_toRightOf="@+id/bookmarklisttitle"
        app:layout_constraintLeft_toLeftOf="@+id/bookmarklisttitle"></TextView>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#000000"
        android:id="@+id/bookmarklisttitle"
        android:maxLines="1"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"></TextView>


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textColor="#000000"
        android:maxLines="1"
        android:id="@+id/bookmarklisturl"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/bookmarklisttitle"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/bookmarklisttitle"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bookmarklisttitle"></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>